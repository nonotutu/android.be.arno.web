<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".JSonActivity" >

    <TextView
        android:id="@+id/json_txvwDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/json_edtxHostname"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="@string/hello_world" />

    <Button
        android:id="@+id/json_bttnGo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="Button" />

    <EditText
        android:id="@+id/json_edtxHostname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/json_bttnGo"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/json_edtxPort"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/json_edtxPort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/json_bttnGo"
        android:layout_alignParentRight="true"
        android:ems="10" />

    <EditText
        android:id="@+id/json_edtxItemId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/json_bttnGo"
        android:layout_toLeftOf="@+id/json_bttnGo"
        android:ems="10" />

    <TextView
        android:id="@+id/fdiouvcxvxc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/json_edtxItemId"
        android:layout_alignLeft="@+id/json_edtxPort"
        android:layout_alignTop="@+id/json_edtxPort"
        android:text=":"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>
